@model IEnumerable<HTTP5101_Cumulative_Project.Models.Class>
@{
    ViewBag.Title = "Index";
}

<h2>Classes List Page</h2>

<div class="row">
    <div class="col-12">
        <form asp-controller="Class" asp-action="Index">
            <p>
                Search: <input type="text" name="Search" value="@ViewData["Search"]" />
                <input type="submit" value="Search" />
            </p>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table border="1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Class Code</th>
                    <th>Class Name</th>
                    <th>Start Date</th>
                    <th>End date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.ClassCode</td>
                        <td>@item.ClassName</td>
                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>
                            @Html.ActionLink("View", "Details", new { id = @item.ClassId }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>

                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    table {
        width: 100%;
    }

    thead, tbody, tfoot, tr, td, th {
        border-width: 1px;
        padding: 0.25em;
    }
</style>
