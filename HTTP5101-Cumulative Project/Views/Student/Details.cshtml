@model HTTP5101_Cumulative_Project.Models.Student
@{
    ViewBag.Title = "StudentDetails";
}

<h2>Student Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            Student Id
        </dt>
        <dd>
            @Model.StudentId
        </dd>

        <dt>
            Student First Name
        </dt>
        <dd>
            @Model.StudentFName
        </dd>

        <dt>
            Student Last Name
        </dt>
        <dd>
            @Model.StudentLName
        </dd>

        <dt>
            Student Number
        </dt>
        <dd>
            @Model.StudentNumber
        </dd>

        <dt>
            Enrol Date
        </dt>
        <dd>
            @Model.EnrolDate.ToShortDateString()
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Delete", "ConfirmDelete", new { id = @Model.StudentId }, new { @class = "btn btn-danger" })
</p>
