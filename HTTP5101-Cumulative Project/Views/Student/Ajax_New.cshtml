
@{
    ViewBag.Title = "Add Student Ajax";
}

<h2>Add Student Ajax</h2>

<div id="containershow">
    <nav class="my-2">
        <a class="btn btn-secondary navlink" href="/Student">Back To Students</a>
    </nav>

    <div class="inputrow my-2">
        <label for="StudentFName">First Name:</label>
        <input type="text" id="StudentFName" name="StudentFName" />
    </div>
    <div class="inputrow my-2">
        <label for="StudentLName">Last Name:</label>
        <input type="text" id="StudentLName" name="StudentLName" />
    </div>
    <div class="inputrow my-2">
        <label for="StudentNumber">Student Number:</label>
        <input type="text" id="StudentNumber" name="StudentNumber" />
    </div>

    <button class="btn btn-primary" onclick="AddStudent();">Add Student</button>
</div>
<script src="~/Scripts/students.js"></script>